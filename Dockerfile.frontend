FROM node:18-alpine

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY src ./src
COPY public ./public
COPY index.html vite.config.ts ./
COPY tsconfig*.json ./
COPY tailwind.config.ts postcss.config.js ./
COPY components.json eslint.config.js ./

EXPOSE 8080

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "8080"]
